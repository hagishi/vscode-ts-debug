{
  "name": "ts-debug",
  "displayName": "TypeScript Debugger",
  "version": "0.0.6",
  "publisher": "kakumei",
  "description": "typescript debug configuration for VS Code.",
  "author": {
    "name": "kakumei",
    "email": "fujiyama@kakumei.jp"
  },
  "icon": "image/icon.png",
  "license": "MIT",
  "keywords": [
    "javascript",
    "typescript",
    "tsx",
    "ts"
  ],
  "engines": {
    "vscode": "^1.29.0",
    "node": "^18.4.1"
  },
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/hagishi/vscode-ts-debug"
  },
  "bugs": {
    "url": "https://github.com/hagishi/vscode-ts-debug/issues"
  },
  "scripts": {
    "prepublish": "tsc -p ./src",
    "compile": "tsc -p ./src",
    "tslint": "tslint ./src/**/*.ts",
    "watch": "tsc -w -p ./src",
    "test": "mocha -u tdd ./out/tests/",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "vscode-debugadapter": "1.51.0"
  },
  "devDependencies": {
    "@types/node": "18.14.0",
    "@types/mocha": "10.0.1",
    "typescript": "4.9.5",
    "mocha": "10.2.0",
    "vscode": "1.1.37",
    "vscode-debugadapter-testsupport": "1.51.0",
    "tslint": "6.1.3",
    "vsce": "2.15.0"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onDebug"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "typescript"
      }
    ],
    "debuggers": [
      {
        "type": "tsx",
        "label": "Tsx Debug",
        "runtime": "node",
        "languages": [
          "typescript",
          "typescriptreact"
        ],
        "initialConfigurations": [
          {
            "name": "tsx",
            "type": "node",
            "request": "launch",
            "args": [
              "${relativeFile}"
            ],
            "runtimeArgs": [
              "--loader",
              "tsx"
            ],
            "cwd": "${workspaceRoot}",
            "skipFiles": [
              "<node_internals>/**",
              "node_modules/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
          }
        ],
        "configurationSnippets": [
          {
            "name": "tsx",
            "type": "node",
            "request": "launch",
            "args": [
              "${relativeFile}"
            ],
            "runtimeArgs": [
              "--loader",
              "tsx"
            ],
            "cwd": "${workspaceRoot}",
            "skipFiles": [
              "<node_internals>/**",
              "node_modules/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
          }
        ]
      },
      {
        "type": "ts-node",
        "label": "TypeScript Debug",
        "runtime": "node",
        "languages": [
          "typescript",
          "typescriptreact"
        ],
        "initialConfigurations": [
          {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": [
              "${relativeFile}"
            ],
            "runtimeArgs": [
              "-r",
              "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "skipFiles": [
              "<node_internals>/**",
              "node_modules/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
          }
        ],
        "configurationSnippets": [
          {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": [
              "${relativeFile}"
            ],
            "runtimeArgs": [
              "-r",
              "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "skipFiles": [
              "<node_internals>/**",
              "node_modules/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
          }
        ]
      }
    ]
  }
}
